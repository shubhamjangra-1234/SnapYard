<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/172918fa27.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
  <header>
    <div id="container">
      <h1>Foto HUB</h1>
      <nav>
        <ul>
          <li><a href="/feed"><i class="fa-solid fa-house"></i></a></li>
          <li><a href="/profile"><i class="fa-solid fa-user"></i></a></li>
          <li><button class="btn btn-danger"><a href="/"><i class="fa-solid fa-right-from-bracket"></i></a></button></li>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <form id="uploadForm" hidden action="/fileUpload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
      </form>    
    <div class="card profile">
      <div class="relative">
      <div class="profile-picture">
        <img
          src="/images/uploads/<%= user.profileImage %>">
        </div>
        <span > 
          <i id="icon" class="fa-regular fa-pen-to-square"></i>
        </span>
    </div>
      <h1 class="name"><%= user.fullName%></h1>
      <h4 class="username"><%= user.email%></h4>
      <a href="add" id="btn">add new post</a>
    </div>
  </div>
  <div class="uploads ">
    <div id="cards">
        <% user.posts.forEach(function(elem){ %>
      <div id="card" style="width: 18rem;">
        <img
          src="/images/uploads/<%= elem.image %>">
      </div>
      <% }) %>
    </div>
      </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
      document.querySelector("#icon").addEventListener("click",function(){
        document.querySelector("#uploadForm input").click();
      });
      
      document.querySelector("#uploadForm input").addEventListener("change",function(){
        document.querySelector("#uploadForm").submit();
      });
      
   </script>
   
    <%- include partials/footer.ejs%>
