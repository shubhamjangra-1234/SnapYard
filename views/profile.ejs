<%- include partials/header.ejs%>
  
  <div class="container">
    <form id="uploadForm" hidden action="/fileUpload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
      </form>    
    <div class="card profile">
      <div class="relative">
      <div class="profile-picture">
        <img
          src="/images/uploads/<%= user.profileImage %>">
        </div>
        <span > 
          <i id="icon" class="fa-regular fa-pen-to-square"></i>
        </span>
    </div>
      <h1 class="name"><%= user.fullName%></h1>
      <h4 class="username"><%= user.email%></h4>
      <a href="add" id="btn">add new post</a>
    </div>
  </div>
  <div class="uploads ">
    <div class="cards flex">
      <div class="card" style="width: 18rem;">
        <img
          src="/images/uploads/<%= user?.posts[0]?.image %>"
          class="card-img-top">
        <div class="card-body">
          <a href="/show/posts" class="card-title">your posts</a>
          <h6>(<%= user?.posts?.length %>) </h6>
        </div>
      </div>
    </div>
      </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
      document.querySelector("#icon").addEventListener("click",function(){
        document.querySelector("#uploadForm input").click();
      })
      document.querySelector("#uploadForm input").addEventListener("change",function(){
        document.querySelector("#uploadForm").submit();
      })
    </script>
    <%- include partials/footer.ejs%>
